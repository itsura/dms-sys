<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
<!-- Bootstrap properties and beans for connections -->
	<bean id="global-properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders">
            <value>true</value>
        </property>
		<property name="locations">
			<list>
				<value>classpath:/dms-sys-global.properties</value>
			</list>
		</property>
	</bean>    
</beans>